{
  "builders": [{
    "type": "vmware-iso",
	"guest_os_type": "Ubuntu-64",
	"boot_command": [
      "<esc><f6><esc> file=floppy:/preseed.cfg vga=788 ks=floppy:/ks.cfg initrd=/install/initrd.gz quiet -- <enter>"
    ],
    "boot_wait": "6s",
    "boot_wait": "35m",
    "disk_size": 11500,
    "disk_type_id": "0",
    "floppy_files": [
      "ks.cfg",
	  "preseed.cfg"
    ],
    "headless": true,
    "iso_url": "http://releases.ubuntu.com/14.04.4/ubuntu-14.04.4-server-amd64.iso",
    "iso_checksum_type": "none",
    "ssh_username": "vagrant", 
	"ssh_password": "vagrant",
	"ssh_wait_timeout": "6m", 
    "shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -P now",
    "skip_compaction": false, 
    "vmx_data": {
      "gui.fitguestusingnativedisplayresolution": "FALSE",
      "memsize": "1024",
      "numvcpus": "1",
      "scsi0.virtualDev": "lsisas1068",
      "ethernet0.present": "TRUE",
      "ethernet0.startConnected": "TRUE"
    }
  }],
    "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "{{.Provider}}_Ubuntu_14.04_x64.box"
    }
  ]
} 